{
  "name": "neth-express-api-ts",
  "version": "1.0.0",
  "description": "An Express Rest Api written in Typescript that provides convinient authorization, access control lists and routes following best practices.",
  "main": "src/server.ts",
  "scripts": {
    "start": "SET NODE_ENV=production&&tsc && node dist/server.js",
    "dev": "nodemon --exec ts-node -T ./src/server.ts",
    "test": "mocha -r ts-node/register test/*.test.ts --timeout 30000 --exit",
    "coverage": "nyc mocha --timeout 30000 -r ts-node/register test/**/*.test.ts --exit"
  },
  "nodemonConfig": {
    "watch": [
      "./swagger.yaml",
      "src/**/*.ts"
    ],
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      "yaml"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "keywords": [
    "Typescript",
    "Express",
    "NodeJS",
    "REST",
    "Api",
    "Mongoose"
  ],
  "author": "Netherium",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Netherium/neth-express-api-ts.git"
  },
  "dependencies": {
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^7.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.13",
    "morgan": "^1.9.1",
    "swagger-ui-express": "^4.0.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.1",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mocha": "^5.2.6",
    "@types/mongoose": "^5.5.32",
    "@types/morgan": "^1.7.35",
    "@types/swagger-ui-express": "^3.0.0",
    "@types/yamljs": "^0.2.30",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "mocha": "^6.1.4",
    "nodemon": "^1.18.10",
    "nyc": "^14.1.1",
    "ts-node": "^8.0.3",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  }
}
